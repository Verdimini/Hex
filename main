#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#include <stdbool.h>

#include <SDL/SDL.h>
#include <SDL/SDL_keysym.h>
#include "SDL_image.h"
#include "SDL_ttf.h"

#define WINHI 600 // window height
#define WINWI 800 // window width

typedef struct
{
    int h, w;
}Dimensions;


int main (int argc, char *argv[])
{

    Dimensions fenetre;
    Uint8  video_bpp = 32;
    SDL_Surface *ecran = NULL, *plateau = NULL, *texte = NULL;
    SDL_Rect positionPlateau, positionTexte;
    SDL_Event event;
    TTF_Font *police = NULL;

    SDL_Color couleurNoire = {0, 0, 0};

    int continuer = 1;

    positionPlateau.x = 230;
    positionPlateau.y = 150;


    fenetre.h = WINHI;
    fenetre.w = WINWI;

    SDL_Init(SDL_INIT_VIDEO);

    if (SDL_Init(SDL_INIT_VIDEO) == -1)
        {
            fprintf(stderr, "Erreur d'initialisation de la SDL : %s\n", SDL_GetError());
            exit(EXIT_FAILURE);
        }

    TTF_Init();

    if(TTF_Init() == -1)
    {
        fprintf(stderr, "Erreur d'initialisation de TTF_Init : %s\n", TTF_GetError());
        exit(EXIT_FAILURE);
    }

    ecran = SDL_SetVideoMode(fenetre.w, fenetre.h, video_bpp, SDL_HWSURFACE | SDL_DOUBLEBUF);

    if (ecran == NULL)
    {
        fprintf(stderr, "Impossible de charger le mode vidÃ©o : %s\n", SDL_GetError());
        exit(EXIT_FAILURE);
    }

    SDL_WM_SetCaption("Jeu de HEX", NULL);

    plateau = IMG_Load("Images/hex.png");

    police = TTF_OpenFont("font_police/OptimusPrinceps.ttf", 28);
    texte = TTF_RenderText_Blended(police, "MENU", couleurNoire);

    positionTexte.x = 20;
    positionTexte.y = 20;

    while (continuer)
    {
        SDL_WaitEvent(&event);

        switch(event.type)
        {
            case SDL_QUIT:

                continuer = 0;
                break;

        }

        positionTexte.x = 20;
        positionTexte.y = 20;

        SDL_FillRect(ecran, NULL, SDL_MapRGB(ecran->format, 255, 255, 255));
        SDL_BlitSurface(plateau, NULL, ecran, &positionPlateau);
        SDL_BlitSurface(texte, NULL, ecran, &positionTexte);
        SDL_Flip(ecran);
    }


    TTF_CloseFont(police);
    TTF_Quit();

    SDL_FreeSurface(plateau);
    SDL_FreeSurface(texte);
    SDL_Quit();

    return EXIT_SUCCESS;
}
